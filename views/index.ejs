    <script>
        const titles = [
        "Discover New Destinations",
        "Plan Your Dream Vacation",
        "Experience Unforgettable Journeys",
        "Explore the World with Us"
        ];

        const descriptions = [
        "Explore the world's most beautiful places with ease and comfort.",
        "Let us handle the details while you enjoy unforgettable experiences.",
        "Create lasting memories with tailor-made travel packages.",
        "Adventure awaits with personalized tours and expert guides."
        ];

        const titleElement = document.getElementById("hero-title");
        const descriptionElement = document.getElementById("hero-description");
        let index = 0;

        function changeText() {
        titleElement.classList.add("hidden");
        descriptionElement.classList.add("hidden");

        setTimeout(() => {
            index = (index + 1) % titles.length;
            titleElement.textContent = titles[index];
            descriptionElement.textContent = descriptions[index];

            titleElement.classList.remove("hidden");
            descriptionElement.classList.remove("hidden");
        }, 1000); // Sync with fade-out
        }

        setInterval(changeText, 5000); // Change every 4 seconds


    </script>
